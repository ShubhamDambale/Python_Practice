# ================Functions in Python=======================

def greetings_function(name,age):
    print('Welcome '+name)
    print('Welcome '+ str(age)) 

name = input('Enter your name')
greetings_function(name,23)


def hello(*name):
    print(name[1])

hello('ram','shyam','jyam')    



